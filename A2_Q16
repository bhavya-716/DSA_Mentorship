#include <iostream>

int main() {
    int n;
    std::cin >> n;

    for (int i = 0; i < n; ++i) {
        for (int j = 1; j <= i + 1; ++j) {
            std::cout << j << "\t";
        }

        for (int j = 2 * (n - i - 1); j > 0; --j) {
            std::cout << "\t";
        }

        for (int j = i + 1; j > 0; --j) {
            
                std::cout << j << "\t";
            
        }

        std::cout << std::endl;
    }

    return 0;
}
