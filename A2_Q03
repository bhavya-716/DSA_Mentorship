#include <iostream>

int main() 
{
    int n;
    std::cin >> n;
    
    for (int i = 1; i < n; ++i)
    {
        for(int j = 0 ; j< (n-i) ; ++j)
        {
            std::cout << '\t';
        }
        for (int k = 0 ; k<i ; ++k)
        {
            std::cout << "*\t";
        }
        std::cout << std::endl;
    }
    return 0;
}
