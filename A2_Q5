#include <iostream>

int main() {
    int n;
    std::cin >> n;

    for (int i = 1; i <= n; i += 2) {
        for (int j = (n - i) / 2; j >= 0; --j) {
            std::cout << "\t";
        }

        for (int k = 0; k < i; ++k) {
            std::cout << "*\t";
        }

        for (int l = (n - i) / 2; l >= 0; --l) {
            std::cout << "\t";
        }

        std::cout << std::endl;
    }

    return 0;
}
