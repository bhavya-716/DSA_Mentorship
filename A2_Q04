#include <iostream>

int main ()
{
    int n;
    std::cin >> n;
    
    for (int i=0; i<=n ; ++i)
    {
        for (int j = 0; j<i; ++j)
        {
            std::cout << '\t';
        }
        for (int k = i; k<=n ; ++k)
        {
            std::cout << "*\t";
        }
        std::cout << std::endl;
    }
    return 0;
}
